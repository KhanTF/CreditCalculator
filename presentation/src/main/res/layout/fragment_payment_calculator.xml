<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="ru.rager.credit.presentation.util.binding.converters.BindingConverters" />

        <variable
            name="viewModel"
            type="ru.rager.credit.presentation.ui.paymentcalculator.PaymentCalculatorViewModel" />

    </data>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.Toolbar
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:navigationIcon="@drawable/ic_back"
                app:onNavigationClick="@{()-> viewModel.onBack()}"
                app:title="@string/calculate_payment" />

        </com.google.android.material.appbar.AppBarLayout>

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/rect_top_corners"
            android:fillViewport="true"
            app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ru.rager.credit.presentation.view.MaterialSpinner
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/dp_16"
                    android:layout_marginTop="@dimen/dp_16"
                    android:drawableStart="@drawable/ic_credit_rate_type"
                    app:arrayResources="@{BindingConverters.creditRateTypeListToIntStringList(viewModel.creditRateList)}"
                    app:hint="@string/credit_rate_type"
                    app:selectedItem="@={viewModel.creditRateSelectedLiveData}" />

                <ru.rager.credit.presentation.view.MaterialSpinner
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/dp_16"
                    android:layout_marginTop="@dimen/dp_8"
                    android:drawableStart="@drawable/ic_credit_rate_frequency"
                    app:arrayResources="@{BindingConverters.creditFrequencyListToRateFrequencyStringList(viewModel.creditRateFrequencyList)}"
                    app:hint="@string/credit_rate_frequency"
                    app:selectedItem="@={viewModel.creditRatePeriodSelectedLiveData}" />

                <ru.rager.credit.presentation.view.MaterialSpinner
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/dp_16"
                    android:layout_marginTop="@dimen/dp_8"
                    android:drawableStart="@drawable/ic_credit_payment_frequency"
                    app:arrayResources="@{BindingConverters.creditFrequencyListToPaymentFrequencyStringList(viewModel.creditPaymentPeriodListLiveData)}"
                    app:hint="@string/credit_payment_frequency"
                    app:selectedItem="@={viewModel.creditPaymentPeriodSelectedLiveData}" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/credit_amount_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/dp_16"
                    android:layout_marginTop="@dimen/dp_8"
                    android:hint="@string/credit_sum">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/credit_amount"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableStart="@drawable/ic_credit_amount"
                        android:drawablePadding="@dimen/dp_8"
                        android:inputType="numberDecimal"
                        android:text="@={viewModel.creditSumLiveData}"
                        android:textAppearance="@style/Text.Light.16"
                        app:drawableTint="?attr/colorPrimaryVariant" />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/credit_term_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/dp_16"
                    android:layout_marginTop="@dimen/dp_8"
                    android:hint="@string/credit_term">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/credit_term"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableStart="@drawable/ic_credit_term"
                        android:drawablePadding="@dimen/dp_8"
                        android:inputType="number"
                        android:text="@={viewModel.creditTermLiveData}"
                        android:textAppearance="@style/Text.Light.16"
                        app:drawableTint="?attr/colorPrimaryVariant" />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/credit_rate_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/dp_16"
                    android:layout_marginTop="@dimen/dp_8"
                    android:hint="@string/credit_rate">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/credit_rate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableStart="@drawable/ic_credit_percent"
                        android:drawablePadding="@dimen/dp_8"
                        android:inputType="numberDecimal"
                        android:text="@={viewModel.creditRateLiveData}"
                        android:textAppearance="@style/Text.Light.16"
                        app:drawableTint="?attr/colorPrimaryVariant" />

                </com.google.android.material.textfield.TextInputLayout>

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/dp_16"
                    android:layout_marginTop="@dimen/dp_8"
                    android:text="Досрочные платежи"
                    android:textAppearance="@style/Text.Light.16" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/early_payment_list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/dp_16"
                    android:layout_marginTop="@dimen/dp_8" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/dp_16"
                    android:layout_marginTop="@dimen/dp_8"
                    android:text="Изменения процентной ставки"
                    android:textAppearance="@style/Text.Light.16" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rate_changes_list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/dp_16"
                    android:layout_marginTop="@dimen/dp_8" />

                <Button
                    style="@style/CreditMaterialButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/dp_16"
                    android:layout_marginTop="@dimen/dp_8"
                    android:enabled="@{viewModel.isCalculateAvailable}"
                    android:text="@string/calculate"
                    app:onClickAndHideKeyboard="@{() -> viewModel.onCalculate()}" />

            </LinearLayout>

        </androidx.core.widget.NestedScrollView>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>

</layout>