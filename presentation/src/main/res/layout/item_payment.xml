<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="data"
            type="ru.rager.credit.domain.entity.CreditPaymentEntity" />

        <import type="ru.rager.credit.presentation.util.binding.converters.BindingConverters" />

    </data>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/margin_horizontal_default"
        android:layout_marginTop="@dimen/margin_4"
        android:layout_marginBottom="@dimen/margin_4"
        app:cardCornerRadius="@dimen/corners_8"
        app:cardElevation="@dimen/elevation_4"
        tools:layout_margin="@dimen/margin_16">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/margin_horizontal_default"
                android:layout_marginTop="@dimen/margin_vertical_default"
                android:text="@{String.format(@string/format_month, data.creditMonthNumber)}"
                android:textAppearance="@style/Text.Light"
                android:textSize="@dimen/text_size_20"
                tools:text="1 месяц" />
        </LinearLayout>

    </androidx.cardview.widget.CardView>

</layout>