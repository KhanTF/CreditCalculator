<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="data"
            type="ru.rager.credit.domain.entity.CreditCalculationPaymentEntity" />

        <import type="ru.rager.credit.presentation.util.binding.converters.BindingConverters" />

    </data>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/dp_8"
        app:cardElevation="@dimen/dp_8">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_16"
                android:layout_marginTop="@dimen/dp_16"
                android:layout_marginEnd="@dimen/dp_16"
                android:text="@{@string/format_number_month(data.creditMonthNumber)}"
                android:textAppearance="@style/Text.Medium.18"
                tools:text="1 месяц" />

            <ru.rager.credit.presentation.view.LabeledTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_16"
                android:layout_marginTop="@dimen/dp_8"
                android:layout_marginEnd="@dimen/dp_16"
                android:text="@{@string/format_sum(data.creditPayment)}"
                app:label="@string/credit_payment" />

            <ru.rager.credit.presentation.view.LabeledTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_16"
                android:layout_marginTop="@dimen/dp_8"
                android:layout_marginEnd="@dimen/dp_16"
                android:text="@{@string/format_sum(data.creditPercentPartOfPayment)}"
                app:label="@string/credit_payment_for_percent" />

            <ru.rager.credit.presentation.view.LabeledTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_16"
                android:layout_marginTop="@dimen/dp_8"
                android:layout_marginEnd="@dimen/dp_16"
                android:text="@{@string/format_sum(data.creditDebtPartOfPayment)}"
                app:label="@string/credit_payment_for_debt" />

            <ru.rager.credit.presentation.view.LabeledTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_16"
                android:layout_marginTop="@dimen/dp_8"
                android:layout_marginEnd="@dimen/dp_16"
                android:layout_marginBottom="@dimen/dp_16"
                android:text="@{@string/format_sum(data.creditDebtReminder)}"
                app:label="@string/credit_remaining_debt" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</layout>