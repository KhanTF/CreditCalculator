<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="ru.rager.credit.presentation.util.binding.converters.oneway.CreditPeriodTypeMapper" />

        <variable
            name="data"
            type="ru.rager.credit.presentation.model.TermTemplateModel" />

        <variable
            name="listener"
            type="ru.rager.credit.presentation.adapters.recyclerview.TermTemplateListAdapter.TermTemplateListener" />
    </data>

    <androidx.appcompat.widget.AppCompatTextView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/term"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="?selectableItemBackground"
        android:onClick="@{()->listener.onSelectTermTemplate(data)}"
        android:paddingStart="@dimen/dp_8"
        android:paddingEnd="@dimen/dp_8"
        android:text="@{CreditPeriodTypeMapper.toTermNumber(context,data.value, data.period)}"
        android:textAppearance="@style/Text.Light.12"
        tools:text="5 лет" />

</layout>