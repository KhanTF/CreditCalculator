<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="CreditToolbar" parent="Widget.MaterialComponents.Toolbar">
        <item name="titleTextColor">?attr/colorOnPrimary</item>
        <item name="subtitleTextColor">?attr/colorOnPrimary</item>
        <item name="minHeight">64dp</item>
    </style>

    <style name="TextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox" >
        <item name="startIconTint">?attr/colorPrimaryVariant</item>
    </style>

    <style name="CreditEditTextStyle" parent="Widget.AppCompat.EditText">
        <item name="drawableTint">?attr/colorPrimaryVariant</item>
        <item name="android:textAppearance">@style/Text.Light.16</item>
    </style>

    <style name="SpinnerItemStyle" parent="Widget.AppCompat.TextView.SpinnerItem">
        <item name="android:textAppearance">@style/Text.Light.16</item>
        <item name="android:padding">@dimen/dp_16</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>

    <style name="MaterialSpinnerStyle">
        <item name="android:textAppearance">@style/Text.Light.16</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="startIconTint">?attr/colorPrimaryVariant</item>
    </style>

    <style name="MaterialButtonStyle" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="rippleColor">@color/selector_material_button_ripple</item>
    </style>

    <style name="MaterialCheckBoxStyle" parent="Widget.AppCompat.CompoundButton.CheckBox">
        <item name="android:textAppearance">@style/Text.Light.16</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>

    <style name="ButtonStyle" parent="Widget.AppCompat.Button">
        <item name="backgroundTint">?attr/colorSecondary</item>
        <item name="android:textColor">?attr/colorOnSecondary</item>
    </style>

    <style name="CreditLabeledTextView">
        <item name="android:textAppearance">@style/Text.Regular.18</item>
        <item name="labelTextAppearance">@style/Text.Light.12</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="labelTextColor">?android:attr/textColorPrimary</item>
    </style>

    <style name="CreditTextView" parent="Widget.MaterialComponents.TextView">
        <item name="android:textAppearance">@style/Text.Light.16</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>

    <style name="CreditDialog" parent="ThemeOverlay.AppCompat.Dialog">
        <item name="android:windowMinWidthMajor">50%</item>
        <item name="android:windowMinWidthMinor">90%</item>
    </style>

    <style name="CreditTabLayout" parent="Widget.MaterialComponents.TabLayout">
        <item name="tabTextColor">@color/selector_material_tab_text_color</item>
    </style>

</resources>