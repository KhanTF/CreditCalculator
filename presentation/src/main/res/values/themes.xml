<resources xmlns:tools="http://schemas.android.com/tools">

    <attr name="colorMaterialButtonRipple" format="color" />
    <attr name="labeledTextView" format="reference" />

    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="actionBarSize">@dimen/dp_64</item>
    </style>

    <style name="AppTheme.Credit">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue_grey_500</item>
        <item name="colorPrimaryVariant">@color/blue_grey_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/red_600</item>
        <item name="colorSecondaryVariant">@color/red_700</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Surface color. -->
        <item name="colorSurface">@color/white</item>
        <item name="colorOnSurface">@color/blue_grey_700</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimary</item>

        <item name="colorMaterialButtonRipple">@color/blue_grey_100</item>
        <item name="android:textColorPrimary">@color/blue_grey_700</item>
        <item name="android:textColorHint">@color/blue_grey_200</item>
        <item name="buttonStyle">@style/CreditButton</item>
        <item name="labeledTextView">@style/CreditLabeledTextView</item>
        <item name="tabStyle">@style/CreditTabLayout</item>

        <item name="toolbarStyle">@style/CreditToolbar</item>
        <item name="textInputStyle">@style/CreditTextInputLayout</item>
        <item name="android:spinnerItemStyle">@style/CreditSpinnerItem</item>
    </style>

    <style name="AppTheme.Credit.PrimaryWindow">
        <item name="android:windowBackground">?attr/colorPrimary</item>
    </style>

    <style name="CreditToolbar" parent="Widget.MaterialComponents.Toolbar">
        <item name="titleTextColor">@color/white</item>
        <item name="subtitleTextColor">@color/white</item>
        <item name="minHeight">64dp</item>
    </style>

    <style name="CreditTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox" />

    <style name="CreditSpinnerItem" parent="Widget.AppCompat.TextView.SpinnerItem">
        <item name="android:textAppearance">@style/Text.Light.16</item>
        <item name="android:padding">@dimen/dp_16</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>

    <style name="CreditMaterialButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="rippleColor">@color/selector_material_button_ripple</item>
    </style>

    <style name="CreditButton" parent="Widget.AppCompat.Button">
        <item name="backgroundTint">?attr/colorSecondary</item>
        <item name="android:textColor">?attr/colorOnSecondary</item>
    </style>

    <style name="CreditLabeledTextView">
        <item name="android:textAppearance">@style/Text.Regular.18</item>
        <item name="labelTextAppearance">@style/Text.Light.12</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="labelTextColor">?android:attr/textColorPrimary</item>
    </style>

    <style name="CreditTabLayout" parent="Widget.MaterialComponents.TabLayout">
        <item name="tabTextColor">@color/selector_material_tab_text_color</item>
    </style>

</resources>