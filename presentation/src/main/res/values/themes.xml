<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="actionBarSize">@dimen/dp_64</item>
    </style>

    <style name="AppTheme.Credit">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue_500</item>
        <item name="colorPrimaryVariant">@color/blue_500</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/green_500</item>
        <item name="colorSecondaryVariant">@color/green_500</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Surface color. -->
        <item name="colorSurface">@color/white</item>
        <item name="colorOnSurface">@color/blue_500</item>

        <item name="android:statusBarColor">?attr/colorPrimary</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowBackground">@drawable/bg_brand</item>

        <item name="android:textColorPrimary">@color/blue_500</item>
        <item name="android:textColorHint">@color/blue_200</item>

        <item name="colorMaterialButtonRipple">@color/blue_100</item>
        <item name="buttonStyle">@style/ButtonStyle</item>
        <item name="labeledTextView">@style/CreditLabeledTextView</item>
        <item name="tabStyle">@style/CreditTabLayout</item>
        <item name="materialSpinner">@style/MaterialSpinnerStyle</item>
        <item name="android:dialogTheme">@style/CreditDialog</item>
        <item name="checkboxStyle">@style/MaterialCheckBoxStyle</item>
        <item name="android:textViewStyle">@style/CreditTextView</item>
        <item name="toolbarStyle">@style/CreditToolbar</item>
        <item name="editTextStyle">@style/CreditEditTextStyle</item>

        <item name="textInputStyle">@style/TextInputLayoutStyle</item>
        <item name="android:spinnerItemStyle">@style/SpinnerItemStyle</item>
    </style>

</resources>